<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout"
    tools:context=".MainActivity"
    android:background="@drawable/main_bg">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="274dp"
        android:layout_height="71dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/text_main_bg"
        android:gravity="center|center_horizontal"
        android:text="@string/MainText"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/WhatIshouldToWear"
        android:textColor="@color/black"
        android:visibility="invisible"
        app:backgroundTint="#00FFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonForMore"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/buttonForMore" />

    <EditText
        android:id="@+id/editTextTextCity"
        android:layout_width="303dp"
        android:layout_height="49dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/city_bg"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:hint="@string/TypeYourCity"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonForWeather"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="@string/CheckWeather"
        android:textColor="@color/black"
        app:backgroundTint="#7FFFD4"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextCity"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/editTextTextCity"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextCity" />

    <TextView
        android:id="@+id/resultWeather"
        android:layout_width="255dp"
        android:layout_height="189dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="8dp"
        android:gravity="center|center_horizontal"
        android:text=""
        android:textAlignment="center"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonForWeather"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toStartOf="@+id/buttonForWeather"
        app:layout_constraintTop_toBottomOf="@+id/buttonForWeather" />

    <TextView
        android:id="@+id/DeskWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center|center_horizontal"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonForMore"
        app:layout_constraintEnd_toEndOf="@+id/resultWeather"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/resultWeather"
        app:layout_constraintTop_toBottomOf="@+id/resultWeather"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/AboutMe"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/for_about"
        android:gravity="center|center_horizontal"
        android:text="..."
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonForMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/more"
        android:textColor="@color/black"
        android:visibility="invisible"
        app:backgroundTint="#00FFFF"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/resultWeather"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/resultWeather" />


</androidx.constraintlayout.widget.ConstraintLayout>